<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="parser suite">
    <test name="positive parser test">
        <parameter name="vItemName" value="WOT"/>
        <parameter name="vItemSize" value="70.20"/>
        <parameter name="vItemPrice" value="50.50"/>
        <parameter name="rItemName" value="apple"/>
        <parameter name="rItemWeight" value="150.0"/>
        <parameter name="rItemPrice" value="1.5"/>
        <parameter name="cartName" value="my_cart"/>

        <groups>
            <run>
                <include name="smoke_test"/>
            </run>
        </groups>

        <classes>
            <class name="parser.PositiveJSonParserTest"/>
        </classes>
    </test>

    <test name="negative parser test">
        <parameter name="absentFilePath" value="src/main/resources/cart.json"/>

        <classes>
            <class name="parser.NegativeJSonParserTest"/>
        </classes>
    </test>
</suite>